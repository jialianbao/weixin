/* pages/demo/demo.wxss */
.body{
  display: block;
  width: 100%;
}
.content{
  text-align: left;
  width: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.content text{
  width: 100%;
  display: block;
  text-align: left
}
.refresh{
  box-sizing: border-box; 
  width: 100%;
  height: 80rpx;
  line-height: 60rpx;
  background: rgba(0,0,0,0.2);
  position: fixed;
  top: 0;
  left:0;
  padding: 10rpx;
  padding-right: 40rpx;
  text-align: right;
}
.refresh_top{
  height: 80rpx;
  width: 100%;
  background: #eee;
}

/* 返回顶部 */
.widget-goTop { 
  position: fixed; 
  bottom: 125px; 
  right: 5px; 
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
} 
.widget-goTop .gotop-wrap { 
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  width: 50px; 
  height: 50px; 
  font-size: 12px; 
  color: #fff; 
  border-radius: 50%; 
  background-color: rgba(0,0,0,0.8); 
  -webkit-background-size: 50px auto; 
}
/* 返回顶部 end */
.loading{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

